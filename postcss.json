{
    "pluginsOptions": {
        "autoprefixer": {"browsers": ["last 2 versions"]},
        "stylelint": {
            "rules": {
                "string-quotes": [2, "double"],
                "selector-no-id": 2,
                "function-blacklist": [2, ["scale"]],
                "selector-class-pattern": [2, "[a-z]+"]
            }
        },
        "postcss-reporter": {"clearMessages": true}
    }
}